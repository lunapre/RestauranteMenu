<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="244dp"
        android:layout_height="248dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/imgADD"
        tools:srcCompat="@tools:sample/avatars[15]" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="152dp"
        android:layout_height="23dp"
        android:layout_alignStart="@+id/imgProduct"
        android:layout_alignTop="@+id/txtPRICE"
        android:text="Product"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="311dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtPRICE"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-3dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_toStartOf="@+id/imgREMOVE"
        android:text="$" />
    <TextView
        android:id="@+id/txtPRICE"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgADD"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-181dp"
        android:layout_marginBottom="150dp"
        android:text="0.0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="83dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="73dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="365dp" />

    <ImageView
        android:id="@+id/imgADD"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_alignTop="@+id/imgREMOVE"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="352dp"
        tools:srcCompat="@drawable/baseline_add_circle_24" />

    <ImageView
        android:id="@+id/imgREMOVE"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="59dp"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="352dp"

        />


</RelativeLayout>