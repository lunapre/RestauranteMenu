<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_uno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_saludo"
            android:textAllCaps="true"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn_boton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_boton"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="funcionUno"
            />
        <TextView
            android:id="@+id/tv_dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_android"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyTheme"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_comentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/str_comentarios"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boton 2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:onClick="funcionDos"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boton 3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boton X"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:theme="@style/MyTheme"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boton Y"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:theme="@style/AppTheme"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boton Z"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:theme="@style/AppTheme2"
            />

    </LinearLayout>






</LinearLayout>