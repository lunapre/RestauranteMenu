<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAzul"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_uno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorVerdeMar"
        android:paddingLeft="10dp"
        android:text="Felicidades a todos los alumnos de ISC que tienen sociedad de alumnos nueva y con muchas ganas de trabajar!"
         />
    <TextView
        android:id="@+id/tv_dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola Mundo Android!"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_uno"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/colorAzulCielo"
        />
    <TextView
        android:id="@+id/tv_tres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje de prueba"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        />

</RelativeLayout>