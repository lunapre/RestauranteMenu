<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_boton1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplastame!"
            android:onClick="funcionUno"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_swipe_refresh_layout"
            android:layout_below="@id/btn_boton1"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ListView
                android:id="@+id/lstv_lista"
                android:layout_below="@id/btn_boton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>


        <TextView
            android:id="@+id/tv_tv1"
            android:layout_below="@id/srl_swipe_refresh_layout"
            android:layout_margin="12dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tv2"
            android:layout_below="@id/tv_tv1"
            android:layout_margin="12dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tv3"
            android:layout_below="@id/tv_tv2"
            android:layout_margin="12dp"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>