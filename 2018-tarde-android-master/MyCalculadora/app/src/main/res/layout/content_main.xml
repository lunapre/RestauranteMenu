<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="dec"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="hex"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="bin"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_num_1_dec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:hint="dec"/>
            <EditText
                android:id="@+id/et_num_1_hex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:onClick="mimenu"
                android:hint="hex"/>
            <EditText
                android:id="@+id/et_num_1_bin"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:hint="bin"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_num_2_dec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:hint="dec"/>
            <EditText
                android:id="@+id/et_num_2_hex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:hint="hex"/>
            <EditText
                android:id="@+id/et_num_2_bin"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:hint="bin"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_num_3_dec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:hint="dec"/>
            <EditText
                android:id="@+id/et_num_3_hex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:hint="hex"/>
            <EditText
                android:id="@+id/et_num_3_bin"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:hint="bin"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>