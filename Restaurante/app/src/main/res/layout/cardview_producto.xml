<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="40dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_producto"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:text="Coca Cola"/>

            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:text="$100"/>

           <ImageButton
               android:id="@+id/ib_subir_cantidad"
               android:layout_width="wrap_content"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/icons8_sort_up_filled_50"
               android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_cantidad_producto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="3"
                android:fontFamily="sans-serif"
                android:text="0"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />
            <ImageButton
                android:id="@+id/ib_bajar_cantidad"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icons8_sort_down_filled_50"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>